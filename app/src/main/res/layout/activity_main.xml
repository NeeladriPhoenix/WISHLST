<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp"
    android:background="#7094F6">

    <TextView
        android:id="@+id/git"
        android:layout_width="150dp"
        android:layout_height="58dp"
        android:gravity="center"
        android:text="ITEM"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/gi"
        android:layout_width="206dp"
        android:layout_height="56dp"
        android:inputType="textCapCharacters"
        android:layout_alignLeft="@+id/git"
        android:layout_marginLeft="163dp" />

    <TextView
        android:layout_width="145dp"
        android:layout_height="53dp"
        android:layout_below="@+id/git"
        android:layout_marginTop="20dp"
        android:id="@+id/qtt"
        android:text="QUANTITY"
        android:gravity="center"/>

    <EditText
        android:id="@+id/qt"
        android:layout_width="208dp"
        android:layout_height="53dp"
        android:layout_below="@+id/gi"
        android:layout_alignLeft="@+id/qtt"
        android:layout_marginLeft="158dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/pt"
        android:layout_width="147dp"
        android:layout_height="61dp"
        android:layout_below="@+id/qtt"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="PRICE" />

    <EditText
        android:id="@+id/p"
        android:layout_width="202dp"
        android:layout_height="61dp"
        android:layout_below="@+id/qt"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_alignLeft="@+id/qtt"
        android:layout_alignParentStart="true"
        android:layout_marginStart="167dp"
        android:layout_marginLeft="157dp"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pt"
        android:layout_marginTop="35dp"
        android:padding="20dp"
        android:text="ADD" />

    <Button
        android:id="@+id/sh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ad"
        android:layout_marginTop="8dp"
        android:padding="20dp"
        android:text="SHOW" />

    <Button
        android:id="@+id/dlt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sh"
        android:layout_marginTop="8dp"
        android:padding="20dp"
        android:text="DELETE" />

    <Button
        android:id="@+id/sal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dlt"
        android:layout_marginTop="8dp"
        android:padding="20dp"
        android:text="SHOW LIST" />



</RelativeLayout>